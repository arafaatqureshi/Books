<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e6196">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_sell"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:background="@drawable/image_round_button"
             />

        <EditText
            android:id="@+id/book_title_editText"
            android:padding="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Book Title"
            android:layout_gravity="center"
            />


        <EditText
            android:id="@+id/book_author_editText"
            android:padding="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/book_price_editText"
            android:padding="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/book_category_editText"
            android:padding="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:inputType="textPassword"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/edu_Board_editText"
            android:padding="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Board"
            android:inputType="textPassword"
            android:layout_gravity="center"
            />




        <Button
            android:id="@+id/sell_book_button"
            android:background="@drawable/round"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:text="Sell Book"
            android:textSize="22dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


    </LinearLayout>
</LinearLayout>